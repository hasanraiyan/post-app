<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gradient-to-br from-gray-900 via-gray-800 to-black text-white min-h-screen">

    <div class="container mx-auto p-6">
        <!-- Header -->
        <div class="flex justify-between items-center mb-8">
            <h2 class="text-3xl font-extrabold tracking-wide text-transparent bg-clip-text bg-gradient-to-r from-green-400 to-blue-500">
                User Profile
            </h2>
            <a href="/logout" class="bg-red-500 hover:bg-red-600 text-white px-5 py-2 rounded-full shadow-lg transition transform hover:scale-105">
                Logout
            </a>
        </div>

        <!-- Greeting -->
        <h1 class="text-2xl mb-6">
            <span class="text-green-400 font-semibold">Hello,</span> <%= user.name %>
        </h1>

        <!-- Post creation form -->
        <div class="bg-gray-800 p-5 rounded-2xl shadow-lg mb-8 border border-gray-700">
            <h5 class="mb-3 font-semibold text-lg">‚úèÔ∏è Create a new post</h5>
            <form method="post" action="/post" class="space-y-4">
                <textarea 
                    name="content"
                    class="w-full resize-none bg-gray-900 border border-gray-700 rounded-lg p-3 focus:outline-none focus:border-green-500 transition"
                    rows="4"
                    placeholder="What's on your mind? üå±"
                ></textarea>
                <button 
                    type="submit" 
                    class="bg-gradient-to-r from-blue-500 to-indigo-600 hover:from-blue-600 hover:to-indigo-700 text-white px-5 py-2 rounded-full shadow-md transition transform hover:scale-105"
                >
                    Post
                </button>
            </form>
        </div>

        <!-- Your Posts -->
        <div>
            <h3 class="text-gray-400 mb-4 text-lg font-medium">üìù Your Posts</h3>

            <div class="grid gap-5">
                <% user.posts.forEach(function(post) { %>
                    <div class="bg-gray-800 border border-gray-700 rounded-xl p-5 shadow-md hover:shadow-xl transition transform hover:scale-[1.01]">
                        <div class="flex justify-between items-center mb-2">
                            <h4 class="font-semibold text-green-400"><%= user.name %></h4>
                            <span class="text-xs text-gray-500">‚ù§Ô∏è <%= post.likes ? post.likes.length : 0 %> likes</span>
                        </div>
                        <p class="mt-2 leading-relaxed"><%= post.content %></p>

                        <!-- Actions -->
                        <div class="flex space-x-5 mt-4 text-sm">
                            <!-- POST Like form -->
                            <form action="/like/<%= post._id %>" method="POST" style="display:inline;">
                                <button type="submit" class="text-blue-400 hover:text-blue-300 transition">
                                    üëç Like
                                </button>
                            </form>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </div>

</body>
</html>
